#include <iostream>
#include <Windows.h>
using namespace std;

int main()
{
    cout << boolalpha;
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int a1, b1, c1;
    string d1, f1;
    cout << "Введите команду для действий:\n 0 - для соединения\n 1 для сложения \n 2 для умножения \n 3 для вычитания \n 4 для деления" << endl;
    cin >> a1;
    switch (a1)
    {
    default:
        cout << "Неверное действие";
        break;
    case 0:
        cout << "Введите 1 слово" << endl;
        cin >> d1;
        cout << "Введите 2 слово" << endl;
        cin >> f1;
        cout << "Полученное слово: " << d1 + f1 << endl;
        break;
    case 1:
        cout << "Введите 1 число" << endl;
        cin >> b1;
        cout << "Введите 2 число" << endl;
        cin >> c1;
        cout << "Полученное число: " << b1 + c1 << endl;
        break;
    case 2:
        cout << "Введите 1 число" << endl;
        cin >> b1;
        cout << "Введите 2 число" << endl;
        cin >> c1;
        cout << "Полученное число: " << b1 * c1 << endl;
        break;
    case 3:
        cout << "Введите 1 число" << endl;
        cin >> b1;
        cout << "Введите 2 число" << endl;
        cin >> c1;
        cout << "Полученное число: " << b1 - c1 << endl;
        break;
    case 4:
        cout << "Введите 1 число" << endl;
        cin >> b1;
        cout << "Введите 2 число" << endl;
        cin >> c1;
        cout << "Полученное число: " << b1 / c1 << endl;
        break;
    }
}
